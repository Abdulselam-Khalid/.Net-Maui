<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotificationSks.MainPage"
             Background="AliceBlue"
             Title="Notifications">

    
    
    <ScrollView>
        <StackLayout>
            <Frame Padding="10" Margin="10" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <StackLayout>
                    <Label Text="New Events Request" FontFamily="OpenSans-SemiBold" />
                    <Label Text="Club Name" FontSize="18" FontFamily="OpenSans-Bold" Margin="0,10,0,5" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Image Source="second.png" WidthRequest="100" Grid.Column="0" HeightRequest="100" Aspect="AspectFill" />
                        <Label Text="Event Name" Grid.Column="1" FontSize="20" FontFamily="OpenSans-Bold"  HorizontalOptions="StartAndExpand" Margin="10,0,0,0" />
                        <Label Text="Event Date" Grid.Column="1" FontSize="16" VerticalOptions="Center" Margin="10,0,0,0" />
                        <Label Text="Event Location" Grid.Column="1" FontSize="16" VerticalOptions="Center" Margin="10,40,0,0"/>
                    </Grid>

                    <Grid ColumnSpacing="30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="37.5*"/>
                            <ColumnDefinition Width="37.5*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Text="Reject" FontFamily="OpenSans-Bold" Grid.Column="1" CornerRadius="15" BackgroundColor="#787878"/>
                        <Button Text="Approve" FontFamily="OpenSans-Bold" Grid.Column="2" CornerRadius="15" BackgroundColor="#01B399"/>
                    </Grid>

                    <Frame Padding="10" Margin="0,10,0,0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                        <StackLayout>
                            <Label Text="Reason/Comment" FontSize="18" FontFamily="OpenSans-Bold" Margin="10,0,0,0" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Entry Placeholder="Write your comment here..." PlaceholderColor="Black" Grid.Column="0" Margin="10,0,0,10" />
                                <Button Text="SEND"  FontFamily="OpenSans-Bold" Grid.Column="1" Margin="0,10,10,10" BackgroundColor="#5669FF" TextColor="White" />
                            </Grid>
                        </StackLayout>
                    </Frame>

                </StackLayout>
            </Frame>
                
            <Frame Padding="10" Margin="10" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <StackLayout>
                    <Label Text="Requesting Edits" FontFamily="OpenSans-SemiBold"/>
                    <Label Text="Club Name" FontSize="18" FontFamily="OpenSans-Bold" Margin="0,10,0,5" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Image Source="second.png" WidthRequest="100" Grid.Column="0" HeightRequest="100" Aspect="AspectFill" />
                        <Label Text="Event Name" Grid.Column="1" FontSize="20" FontFamily="OpenSans-Bold"  HorizontalOptions="StartAndExpand" Margin="10,0,0,0" />
                        <Label Text="Event Date" Grid.Column="1" FontSize="16" VerticalOptions="Center" Margin="10,0,0,0" />
                        <Label Text="Event Location" Grid.Column="1" FontSize="16" VerticalOptions="Center" Margin="10,40,0,0"/>
                    </Grid>

                    <Grid ColumnSpacing="30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="37.5*"/>
                            <ColumnDefinition Width="37.5*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Text="Reject" FontFamily="OpenSans-Bold" Grid.Column="1" CornerRadius="15" BackgroundColor="#787878"/>
                        <Button Text="Approve" FontFamily="OpenSans-Bold" Grid.Column="2" CornerRadius="15" BackgroundColor="#01B399"/>
                    </Grid>

                    <Frame Padding="10" Margin="0,10,0,0" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                        <StackLayout>
                            <Label Text="Reason/Comment" FontSize="18" FontFamily="OpenSans-Bold" Margin="10,0,0,0" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Entry Placeholder="Write your comment here..." PlaceholderColor="Black" Grid.Column="0" Margin="10,0,0,10" />
                                <Button Text="SEND"  FontFamily="OpenSans-Bold" Grid.Column="1" Margin="0,10,10,10" BackgroundColor="#5669FF" TextColor="White" />
                            </Grid>
                        </StackLayout>
                    </Frame>

                </StackLayout>
            </Frame>
            

        </StackLayout>
    </ScrollView>

</ContentPage>
